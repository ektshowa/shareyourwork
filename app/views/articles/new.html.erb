<script type="text/javascript">
	tinymce.init({
		selector		: "textarea",
		statusbar		: false,
		plugins			: "textcolor",
		plugins			: "emoticons",
		plugins			: "spellchecker",
		fontsize_formats: "8pt 10pt 12pt 14pt 18pt 24pt 36pt",
		font_formats	: "Arial=arial,helvetica,sans-serif;Courier New=courier new,courier,monospace;AkrutiKndPadmini=Akpdmi-n"
	});
	$(document).ready(function(){
		$('[data-behaviour~=datepicker]').datepicker();
	})
</script>
<style>
	#upload_article ul li{
		display: inline;
	}
</style>
<% provide(:title, 'Upload Article') %>

<h3>Upload your article</h3>
<div id="testdata"></div>
<div>
	<p>
		Please upload your file or copy/paste the content of your article
	</p>
	<p>
		If you prefer to upload the article's file, complete the form first.<br/> 
		Upon saving the form, a popup window opens up that enables you to upload your file.
	</p>
</div>	
<div id="uploadModalLink1">
	<%= link_to "Add the article file", new_articlefile_path, id: "uploadFile", remote: true, class: 'static-popup-link' %>	
</div>
<a href="#myModal"  data-toggle="modal">Launch demo modal</a>
<div id="modal-newFile" class="modal hide fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
</div>


<div class="row-fluid">
	<div class="span6 offset3">
		<%= form_for(@article, remote: true) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :title %>
			<%= f.text_field :title %>
			
			<%= f.label :subject %>
			<%= f.text_field :subject %>	
			
			<%= f.label :datepublished %>
			<%= f.text_field :datepublished, 'data-behaviour' => 'datepicker' %>
			
			<br/><span>Please summarize your article (You can just insert the article introduction)</span><br/>
			
			<%= f.text_area :description, placeholder: "Enter your article summary...", :cols => 40, :rows => 5 %>
			
			<br/><span>Use the editor to Enter the content of your article below</span><br/>
			
			<%= f.text_area :articlecontent, placeholder: "Type in or Copy/Paste your article...", :cols => 40, :rows => 10 %>
			<p> OR Upload your file</p>
			<div id="uploadModalLink3"></div>	
			<br/>
			<span>The fields below are required, but filling them allow your article to be found in a search</span><br/>
			<br/>
			<%= f.label :language %>
			<%= f.text_field :language %>
			
			<%= f.label :format %>
			<%= f.text_field :format %>
			
			<%= f.label :region %>
			<%= f.text_field :region %>
			
			<%= f.label :isbn %>
			<%= f.text_field :isbn %>
			<br/>
			<%= f.submit "Save Article", id: "uploadarticle", class: "btn btn-large btn-primary" %>	
			<div id="uploadModalLink2"></div>	
		<% end %>
	</div>	
</div>		
